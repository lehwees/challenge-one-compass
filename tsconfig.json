{
  "compilerOptions": {
    "target": "es2016",                                 
    "experimentalDecorators": true,                  
    "module": "commonjs",                               
    "baseUrl": "./source",                              
    "paths": {"@/*":["*"]},                              
    "outDir": "./dist",                                
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true                                
  },
  "include": ["source/**/*"],
  "exclude": ["node_modules"]
}
